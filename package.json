{
  "name": "mailvault",
  "version": "1.0.2",
  "description": "A reactive email client with local storage capabilities",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client": "vite",
    "server": "node server/index.js",
    "build": "vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "npm run build:server && tauri build",
    "tauri:build:debug": "npm run build:server && tauri build --debug",
    "build:server": "node scripts/build-server.js",
    "tauri:icon": "tauri icon",
    "build:release": "./scripts/build-developer-id.sh",
    "build:appstore": "./scripts/build-appstore.sh",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "express": "^4.18.2",
    "framer-motion": "^10.16.16",
    "idb": "^7.1.1",
    "imapflow": "^1.0.154",
    "lucide-react": "^0.294.0",
    "mailparser": "^3.6.6",
    "nodemailer": "^6.9.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@tauri-apps/api": "^1.5.3",
    "@tauri-apps/cli": "^1.5.9",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.11",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "vite": "^5.0.8",
    "vitest": "^4.0.18"
  }
}
